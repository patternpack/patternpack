{
  "release": "./dist",
  "build": "./html",
  "src": "./src",
  "assets": "./src/assets",
  "theme": "patternpack-example-theme",
  "logo": "/theme-assets/images/logo.svg",
  "css": {
    "preprocessor": "sass",
    "fileName": "patterns",
    "autoprefixer": {
      "browsers": ["last 2 versions"]
    }
  },
  "publish": {
    "library": true,
    "patterns": false
  },
  "patternStructure": [
    { "name": "Atoms", "path": "atoms" },
    { "name": "Molecules", "path": "molecules" },
    { "name": "Pages", "path": "pages" }
  ],
  "server": {
    "port": 8888
  }
}
